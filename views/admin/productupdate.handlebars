<section class="page-section cta">
  <div class="container">
        <div class="row">
          <div class="col-xl-9 mx-auto">
            <div class="text-center rounded">

      <!-- Default box -->
      
		

    
		<div class="box box-success">
            <div class="box-header with-border">
              <h3 class="box-title">Update Products</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <form role="form" method="post" action="/admin/product/updatesubmit/{{prod_id}}">
                <!-- text input -->
                <div class="form-group">
                  <label>Product Name</label>
                  <input name="name" type="text" class="form-control" placeholder="Enter ..." required="required" value="{{prod_name}}">
                </div>
				<div class="form-group">
                  <label>Product Description</label>
                  

                  <textarea name="description" class="form-control" rows="5" placeholder="{{prod_desc}}" value="{{prod_desc}}"></textarea>

                <!-- <input name="description" type="textarea" rows=5 class="form-control" placeholder="{{prod_desc}}" value="{{prod_desc}}"> -->
                 

                </div>
				<div class="form-group">
                  <label>Product Tagline</label>
                  <input name="tagline" type="text" step="0.01" min="-9999999999.99" max="9999999999.99" class="form-control" placeholder="optional"  value="{{prod_tagline}}">
                </div>
				<div class="form-group">
                  <label>Product Price</label>
                  <input name="price" type="number" class="form-control" placeholder="Enter ..." required="required"  value="{{prod_price}}">
                </div>
				<div class="form-group">
                  <label>Product Warranty</label>
                  <input name="warranty" type="number" class="form-control" placeholder="optional"  value="{{prod_warranty}}">
                </div>
				<div class="form-group">
                  <label>Product Category</label>
                  <select name="category" class="form-control" required="required" value="{{prod_cat_id}}">
				    
				    {{#each categorydata}}
                    <option value={{this.category_id}}>{{this.name}}</option>
                    {{/each}}
                  </select>
                </div>
				<div class="form-group">
				  <label>Product Brand</label>
                  <select name="brand" class="form-control" required="required" value="{{prod_brand_id}}">
				    
				    {{#each branddata}}
                    <option value={{this.brand_id}}>{{this.name}}</option>
                    {{/each}}
                  </select>
                </div>
				<div class="form-group">
                  <label>Product Picture</label>
                  <input name="picture" type="text" class="form-control" placeholder="Enter ..." required="required" value="{{prod_picture}}">
                </div>
				<div class="form-group">
				   <button type="submit" class="btn bg-purple margin">Send</button>
                </div>
				

              </form>
            </div>
            <!-- /.box-body -->
          </div>

        </div>
        </div>
        </div>
  </div>
</section>

