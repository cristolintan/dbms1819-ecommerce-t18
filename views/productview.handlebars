<section class="page-section cta">
  <div class="container">
    <div class="row">
      <div class="col-xl-9 mx-auto">

    <span class="btn btn-sm btn-primary" id="addUserbtn" style="margin-right:5px" onclick="location.href='/product/update/{{prod_id}}';" ">Update Product</span>


        <div class="cta-inner text-center rounded">
       
        <section class="content-header">
      <h1>
        {{prod_name}}
      </h1>
    <br>

    </section>

    

    <!----ADD BOOTSTRAP IN THIS CONTENT---->

    <div class="box-body" >
      <div class="box-body box-profile">
              <h3 >{{prod_name}}</h3>
                <li >
                   <b>Price: </b> <a class="pull-right">P{{prod_price}}</a>
                </li>
                
                <li >
                  <b>Brand: </b> <a class="pull-right">{{brandname}}</a>
                </li>
                <li >
                  <b>Category/Type: </b> <a class="pull-right">{{categoryname}}</a>
                </li>
                <li >
                  <b>Description: </b> <a class="pull-right">{{prod_desc}}</a>
                </li

                <li class="list-group-item">
                  <b>Tagline: </b> <a class="pull-right">{{prod_tagline}}</a>
                </li>
        <li class="list-group-item">
                  <b>Warranty: </b> <a class="pull-right">{{prod_warranty}} days</a>
                </li>
        </ul>
              
            </div>
        </div>


         </div>
        </div>
    
    <div class="box box-success">
            <div class="box-header with-border">
              <h3 class="box-title">Contact Us</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <form role="form" method="post" action="/send-email/{{prod_id}}">
                <!-- text input -->
        <div class="form-group">
                  <label>Product Id</label>
                  <input name="id" type="text" class="form-control" disabled value="{{prod_id}}">
                </div>
                <div class="form-group">
                  <label>Customer Name</label>
                  <input name="cust_name" type="text" class="form-control" placeholder="Enter ..." required="required">
                </div>
        <div class="form-group">
                  <label>Phone</label>
                  <input name="phone" type="number" class="form-control" placeholder="Enter ..." required="required">
                </div>
        <div class="form-group">
                  <label>Email</label>
                  <input name="email" type="email" class="form-control" placeholder="Enter ..." required="required">
                </div>
        <div class="form-group">
                  <label>Quantity</label>
                  <input name="quantity" type="number" class="form-control" placeholder="Enter ..." required="required">
                </div>
        <div class="form-group">
           <button type="submit" class="btn bg-purple margin">Send</button>
                </div>
        

              </form>
            </div>
            <!-- /.box-body -->
          </div>  



                 
            </div>
          </div>
        </div>
  </div>
</section>